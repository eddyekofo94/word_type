{
  "name": "word_type",
  "version": "1.0.0",
  "description": "A quick WebGL game, trying new things",
  "main": "main.js",
  "scripts": {
    "start": "node --inspect -r ts-node/register src/server.ts",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "nodemon --watch config --exec 'webpack-dev-server --config webpack.config.js'"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eddyekofo94/word_type.git"
  },
  "keywords": [
    "game",
    "bible",
    "js",
    "ts",
    "webgl",
    "javascript"
  ],
  "author": "Eddy Ekofo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eddyekofo94/word_type/issues"
  },
  "homepage": "https://github.com/eddyekofo94/word_type#readme",
  "dependencies": {
    "@types/express": "^4.16.0",
    "express": "^4.16.3",
    "phaser": "^3.11.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.22.1",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-node-externals": "^1.7.2"
  }
}
